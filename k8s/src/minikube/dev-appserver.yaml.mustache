apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: dev-appserver-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dev-appserver-app
  template:
    metadata:
      name: dev-appserver-pod-template
      labels:
        app: dev-appserver-app
    spec:
      containers:
      - name: dev-appserver-container
        image: google/cloud-sdk:latest
        workingDir: /app-engine-src-container
        command: ["dev_appserver.py"]
        args:
        - dispatch.yaml
        - server/app.yaml
        - www-redirect-service/app.yaml
        - --host=0.0.0.0
        - --port=8080
        - --admin_host=0.0.0.0
        - --admin_port=8079
        - --enable_host_checking=false
        - --use_mtime_file_watcher
        ports:
        - containerPort: 8079
        - containerPort: 8080
        volumeMounts:
        - mountPath: /app-engine-src-container
          name: app-engine-src-volume
      volumes:
      - name: app-engine-src-volume
        hostPath:
          # directory location on host
          path: /app-engine-src-host
          # this field is optional
          type: Directory
---
apiVersion: v1
kind: Service
metadata:
  name: dev-appserver-service
spec:
  ports:
  - name: admin
    port: 8077
    targetPort: 8079
  - name: site
    port: 8078
    targetPort: 8080
  selector:
    app: dev-appserver-app
