apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: gcloud-pubsub-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gcloud-pubsub-app
  template:
    metadata:
      name: gcloud-pubsub-pod-template
      labels:
        app: gcloud-pubsub-app
    spec:
      containers:
      - name: gcloud-pubsub-container
        image: google/cloud-sdk:latest
        command: ["gcloud"]
        args:
        - beta
        - emulators
        - pubsub
        - start
        - --host-port=0.0.0.0:9001
        ports:
        - containerPort: 9001
---
apiVersion: v1
kind: Service
metadata:
  name: gcloud-pubsub-service
spec:
  ports:
  - port: 9002
    targetPort: 9001
  selector:
    app: gcloud-pubsub-app
